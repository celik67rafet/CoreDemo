@section scripts {

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script>

        $(document).ready(function () {

            var isChecked = false;

            console.log("sayfa yüklendi");

            $('#selectAll').click( function(){

                console.log('selected');

                if( isChecked ){ 
                    
                    $(this).html('<span><i class="fa fa-check-square"></i> Tümü</span>');
                    $('input.i-checks').iCheck('uncheck');

                }
                else
                { 
                    $(this).html('<span><i class="fa fa-window-close"></i> Tümü</span>')
                    $('input.i-checks').iCheck('check');
                }

                isChecked = !isChecked;
            } )

            $('#deleteSelected').click(function () {

                console.log("butona basıldı");

                var checkedItems = $('input.i-checks:checked');

                var messageIds = [];

                checkedItems.each(function () {

                    var row = $(this).closest('tr');

                    var messageId = row.attr('data-message-id');

                    if (messageId) {

                        messageIds.push(messageId);

                    }

                });

                if (messageIds.length > 0) {

                    $.ajax({
                        url: '/Admin/Message/DeleteMessages',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(messageIds),
                        dataType: 'json',
                        success: function ( data ) {

                            console.log(data.message);

                            window.location.href = "MessageTrashBox"

                        },
                        error: function (xhr, status, error) {

                            console.error('Hata: ', error);

                        }
                    });

                } else {
                    console.log("seçilen mesaj yok!");
                }

            } )

            $('#backwardSelected').click( function ()
            {
                console.log("selected");

                var checkedItems = $('input.i-checks:checked');

                var messageIds = [];

                checkedItems.each( function(){

                    var row = $(this).closest('tr');

                    var messageId = row.attr('data-message-id');

                    if( messageId ){

                        messageIds.push( messageId );
                    }

                } );

                if (messageIds.length > 0) {

                    $.ajax({
                        url: '/Admin/Message/TestMessages',
                        type: 'POST',
                        data: JSON.stringify(messageIds),
                        contentType: 'application/json',
                        dataType: 'json',
                        success: function (data) {

                            console.log(data);

                            window.location.href = "/Admin/Message/MessageTrashBox";

                        }, error: function (xhr, status, error) {

                            console.log(error);

                        }
                    });
                } else {
                    console.log('herhangi bir seçim yapılmadı, mesaj seç');
                }
            } )
        })

    </script>

