@section scripts{

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script>

        if (navigator.getBattery) {
            navigator.getBattery().then(function (battery) {
                console.log("Şarj Seviyesi: " + (battery.level * 100) + "%");

                // Şarj seviyesi her değiştiğinde
                battery.onlevelchange = function () {
                    console.log("Yeni Şarj Seviyesi: " + (battery.level * 100) + "%");
                };
            });
        } else {
            console.log("Battery API tarayıcınız tarafından desteklenmiyor.");
        }

        $( document ).ready( function(){

            var isChecked = false;

            $('input.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue'
            });

            // Sayfa yüklendiğinde tüm checkbox'ları işaretle
           
            console.log("Sayfa Yüklendi");
            
            $('#sendToTrash').click( function(){

                console.log("çöpe basıldı");

                var checkedItems = $('input.i-checks:checked');

                var messageIds = [];

                checkedItems.each(function () {

                    var row = $(this).closest('tr');

                    var senderId = row.attr('data-message-id');

                    if (senderId) {

                        messageIds.push(senderId);

                        console.log(senderId);

                    }

                });

                if (messageIds.length > 0) {

                    $.ajax({
                        url: '/Admin/Message/TestMessages',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(messageIds),
                        dataType: 'json',
                        success: function (data) {
                            console.log(data.message);

                            window.location.href = '/Admin/Message/Inbox';

                        },
                        error: function (xhr, status, error) {
                            console.error("Hata:", error);
                        }
                    });

                } else {

                    console.log("seçilen mesaj yok!");

                }

            } )

            $('#selectAll').click( function(){

                if (isChecked) { $('input.i-checks').iCheck('uncheck'); $(this).html('<span><i class="fa fa-check-square"></i> Tümü</span>'); }
                else 
                { $('input.i-checks').iCheck('check'); $(this).html('<span><i class="fa fa-window-close"></i> Tümü</span>'); }

                isChecked = !isChecked;

                
            } )

            $('.unread').click( function(){


                var row = $(this).closest('tr');

                var messageId = row.attr('data-message-id');

                console.log(messageId);

                window.location.href = '/Admin/Message/MessageDetails/' + messageId;
            } )
        } )

    </script>

