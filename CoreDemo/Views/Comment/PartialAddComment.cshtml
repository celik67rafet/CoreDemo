
<div class="comment-top">
	<h4>Yorum Bırak:</h4>
	<div class="comment-bottom">
		<form asp-action="PartialAddComment" asp-controller="Comment" method="post">
			<input class="form-control" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
			<input class="form-control" type="text" name="CommentTitle" placeholder="Başlık" required="">
			<input type="hidden" name="BlogID" value="@ViewBag.i" />
			<textarea class="form-control" name="CommentContent" placeholder="İçerik..." required=""></textarea>
			<button type="submit" class="btn btn-primary submit">Gönder</button>
		</form>
	</div>
</div>