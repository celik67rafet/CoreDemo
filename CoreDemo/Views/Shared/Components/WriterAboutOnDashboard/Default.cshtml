@using EntityLayer.Concrete
@model List<Writer>


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                @foreach( var item in Model)
                {
                    <div class="d-flex flex-column text-break">
                        <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                            <i class="mdi mdi-account-outline icon-sm mr-2"></i>
                            <span>@item.WriterName</span>
                        </div>
                        <div class="d-flex align-items-center text-muted font-weight-light">
                            <i class="mdi mdi-mail icon-sm mr-2"></i>
                            <span>@item.WriterMail</span>
                        </div>
                    </div>
                    <div class="d-flex mt-5 align-items-top">
                        <img src="~/WriterImageFiles/@ViewBag.userImage" class="img-sm rounded-circle mr-3" alt="image">
                        <div class="mb-0">
                            <p class="mb-0 font-weight-light text-break">@item.WriterAbout</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
