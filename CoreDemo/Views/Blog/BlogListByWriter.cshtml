@using EntityLayer.Concrete

@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Blog Başlık</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach( var item in Model ){
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @if( item.BlogStatus)
            {
                <td><a class="btn btn-success">Aktif</a></td>
            }
            else
            {
                <td><a class="btn btn-dark">Pasif</a></td>
            }
            <td>
                <a href="#" class="btn btn-danger deleteBtn" data-toggle="modal" data-target="#confirmDeleteModal" data-id="@item.BlogID">Sil</a>
            </td>
            <td><a href="/Blog/EditBlog/@item.BlogID    " class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Ekle</a>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu öğeyi silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteBtn">Evet</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        var deleteUrl;
        console.log("Debub başladı...");
        // Silme butonuna tıklama
        $('.deleteBtn').click(function () {
            var id = $(this).data('id');
            deleteUrl = '/Blog/DeleteBlog/' + id;
            console.log('Delete URL:', deleteUrl); // Debug için
        });

        // Evet butonuna tıklama
        $('#confirmDeleteBtn').click(function () {
            console.log('Redirecting to:', deleteUrl); // Debug için
            if (deleteUrl) {
                window.location.href = deleteUrl;
            }
        });
    });
</script>
