
@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Blog Ekle</h1>

@using ( Html.BeginForm( "BlogAdd", "Blog", FormMethod.Post ) )
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor( x => x.BlogTitle, new { @class = "form-control w-25" } )
    @Html.ValidationMessageFor( x => x.BlogTitle )
    <br />

    @Html.Label("Blog Görseli")
    @Html.TextBoxFor( x => x.BlogImage, new { @class = "form-control w-25" } )
    @Html.ValidationMessageFor( x => x.BlogImage )
    <br />

    @Html.Label("Blog Küçük Resmi")
    @Html.TextBoxFor( x => x.BlogThumbnailImage, new { @class = "form-control w-25" } )
    <br />

    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control w-25" })
    <br />

    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent, 3, 1, new { @class = "form-control w-25" })
    @Html.ValidationMessageFor( x => x.BlogContent )
    <br />

    <button class="btn btn-info">Kaydet</button>
    <a class="btn btn-danger" href="/Blog/BlogListByWriter/">İptal Et</a>
}
