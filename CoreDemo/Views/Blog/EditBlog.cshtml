@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>EditBlog</h1>

@using ( Html.BeginForm("EditBlog" , "Blog" , FormMethod.Post) )
{
    @Html.Label("BlogID")
    @Html.TextBoxFor( x => x.BlogID, new { @class = "form-control w-25" } )
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor( x => x.BlogTitle, new { @class = "form-control w-25" } )
    <br />
    @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor( x => x.BlogThumbnailImage, new { @class = "form-control w-25" } )
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor( x => x.BlogImage, new { @class = "form-control w-25" } )
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, "Kategori Seçin", new { @class = "form-control w-25" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor( x => x.BlogContent, new { @class = "form-control w-25" } )
    <br />
    <div class="col-md-6">
        <div class="form-group">
            <div class="form-check form-check-success">
                <label class="form-check-label">
                    @Html.RadioButtonFor(x => x.BlogStatus, true, new { @class = "form-check-input" }) Aktif
                </label>
            </div>
            <div class="form-check form-check-dark">
                <label class="form-check-label">
                    @Html.RadioButtonFor(x => x.BlogStatus, false, new { @class = "form-check-input" }) Pasif
                </label>
            </div>
        </div>
    </div>
    <button class="btn btn-success">Güncelle</button>
}
    