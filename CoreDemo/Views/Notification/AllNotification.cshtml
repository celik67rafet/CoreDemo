@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirimler</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> ID </th>
                        <th> Bildirim Türü </th>
                        <th>Tarih</th>
                        <th>Durumu</th>
                        <th> Detay </th>
                    </tr>
                </thead>
                <tbody>
                   @foreach( var item in Model ){
                    <tr>
                        <td>
                            @item.NotificationID
                        </td>
                            <td>
                                <div class="d-flex flex-row align-items-center">
                                    <div class="@item.NotificationColor rounded-circle p-2"><span class="@item.NotificationTypeSymbol"></span></div>
                                    <div style="margin-left:0.5em;">@item.NotificationType</div>
                                </div>
                            </td>
                            <td> @(((DateTime)item.NotificationDate).ToString("dd-MMM-yyyy")) </td>
                            <td>

                                @if( item.NotificationStatus )
                                {
                                    <span>Yeni</span>
                                }
                                else
                                {
                                    <span>Okundu</span>
                                }

                            </td>
                            <td>
                                <a href="/Notification/NotificationDetail/@item.NotificationID" class="mdi mdi-binoculars" style="font-size: 1.5rem;"></a>
                            </td>
                    </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</div>
